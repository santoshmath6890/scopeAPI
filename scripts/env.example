# ScopeAPI Environment Configuration Template
# Copy this file to .env.local for LOCAL DEVELOPMENT ONLY
# For production/staging, use Kubernetes secrets or other secure methods

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Configuration
POSTGRES_DB=scopeapi
POSTGRES_USER=scopeapi
POSTGRES_PASSWORD=scopeapi_dev_password_2024

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis Password (for caching and session storage)
REDIS_PASSWORD=redis_dev_password_2024

# ============================================================================
# MONGODB CONFIGURATION (Optional)
# ============================================================================

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=scopeapi
MONGO_INITDB_ROOT_PASSWORD=mongodb_dev_password_2024
MONGO_INITDB_DATABASE=scopeapi

# ============================================================================
# INFLUXDB CONFIGURATION (Optional)
# ============================================================================

# InfluxDB Configuration
DOCKER_INFLUXDB_INIT_USERNAME=scopeapi
DOCKER_INFLUXDB_INIT_PASSWORD=influxdb_dev_password_2024
DOCKER_INFLUXDB_INIT_ORG=scopeapi
DOCKER_INFLUXDB_INIT_BUCKET=scopeapi
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=scopeapi_admin_token_2024

# ============================================================================
# JWT CONFIGURATION
# ============================================================================

# JWT Secret for authentication (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=scopeapi_jwt_secret_key_2024_change_in_production

# JWT Expiration time
JWT_EXPIRATION=24h

# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Environment (development, staging, production)
NODE_ENV=development

# ============================================================================
# KAFKA CONFIGURATION
# ============================================================================

# Kafka Brokers (comma-separated list)
KAFKA_BROKERS=localhost:9092

# Kafka Topic Prefix
KAFKA_TOPIC_PREFIX=scopeapi

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Enable/Disable features
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_CSRF_PROTECTION=true

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================

# External API Keys (if needed)
# EXTERNAL_API_KEY=your_external_api_key_here
# EXTERNAL_API_URL=https://api.external-service.com

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================

# Development-specific settings
DEBUG_MODE=true
HOT_RELOAD=true
MOCK_EXTERNAL_SERVICES=false

# ============================================================================
# NOTES
# ============================================================================

# IMPORTANT SECURITY NOTES:
# 1. This file is for LOCAL DEVELOPMENT ONLY
# 2. Never commit .env.local to version control
# 3. Change all passwords and secrets in production
# 4. Use environment-specific configuration for staging/production
# 5. Consider using a secrets management system for production

# For production deployment:
# - Use Kubernetes secrets
# - Use HashiCorp Vault
# - Use AWS Secrets Manager
# - Use Azure Key Vault
# - Or other secure secrets management solutions