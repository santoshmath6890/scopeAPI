# Development Dockerfile for API Discovery Service
# Includes debugging tools and live code reloading

FROM golang:1.21-alpine AS builder

# Install build dependencies
RUN apk add --no-cache git ca-certificates tzdata wget

# Install Delve debugger
RUN go install github.com/go-delve/delve/cmd/dlv@latest

# Install air for live reloading
RUN go install github.com/cosmtrek/air@latest

# Set working directory
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the application with debug symbols
RUN CGO_ENABLED=0 GOOS=linux go build -gcflags="all=-N -l" -o api-discovery cmd/main.go

# Development stage
FROM alpine:latest

# Install runtime dependencies
RUN apk --no-cache add ca-certificates tzdata wget

# Install Delve debugger
COPY --from=builder /go/bin/dlv /usr/local/bin/dlv

# Install air for live reloading
COPY --from=builder /go/bin/air /usr/local/bin/air

# Create non-root user
RUN addgroup -g 1001 -S scopeapi && \
    adduser -u 1001 -S scopeapi -G scopeapi

# Set working directory
WORKDIR /app

# Copy binary from builder stage
COPY --from=builder /app/api-discovery .

# Copy configuration files
COPY --from=builder /app/config ./config

# Copy air configuration for live reloading
COPY --from=builder /app/.air.toml ./.air.toml

# Change ownership to non-root user
RUN chown -R scopeapi:scopeapi /app

# Switch to non-root user
USER scopeapi

# Expose ports
EXPOSE 8080 2345

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8080/health || exit 1

# Default command (can be overridden)
CMD ["./api-discovery"]
